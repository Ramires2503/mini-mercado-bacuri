{
  "compilerOptions": {
    "target": "ES2020",             // Gera código compatível com Node.js moderno
    "module": "CommonJS",           // Usa CommonJS para rodar no Node
    "outDir": "dist",               // Saída da compilação
    "rootDir": "src",               // Pasta onde está o código TS
    "strict": true,                 // Ativa todas as verificações de tipo
    "esModuleInterop": true,        // Permite importar libs com sintaxe "import x from"
    "moduleResolution": "node",     // Resolve módulos no padrão do Node.js
    "resolveJsonModule": true,      // Permite importar arquivos JSON
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true            // Ignora checagem de tipos das libs (evita erros chatos)
  },
  "include": ["src/**/*"]
}
